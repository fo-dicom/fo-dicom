{
  "version": "1.0.0-*",
  "testRunner": "xunit",
  "buildOptions": {
    "emitEntryPoint": false,
    "compile": {
      "include": [
        "../../SharedAssemblyInfo.cs",
        "../Desktop/DicomDatasetTest.cs",
        "../Desktop/DicomDictionaryTest.cs",
        "../Desktop/Network/DicomClientTest.cs",
        "../Desktop/Network/Ports.cs"
      ]
    },
    "publicSign": true,
    "keyFile": "../../DICOM/fo-dicom.snk",
    "outputName": "DICOM [Unit Tests]",
    "define": [ "NETSTANDARD" ]
  },

  "dependencies": {
    "Microsoft.NETCore.App": {
      "type": "platform",
      "version": "1.0.1"
    },
    "xunit": "2.2.0",
    "dotnet-test-xunit": "2.2.0-preview2-build1029",
    "NetCore": {
      "target": "project"
    }
  },

  "frameworks": {
    "netcoreapp1.0": {
      "imports": [
        "portable-net45+win8"
      ]
    }
  }
}
